{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "ignoreUnstable": false,
  "baseBranches": [
    "master",
    "stable25",
    "stable24",
    "stable23"
  ],
  "enabledManagers": [
    "npm"
  ],
  "ignoreDeps": [
    "node"
  ],
  "packageRules": [
    {
      "groupName": "tiptap",
      "matchPackagePrefixes": [
        "@tiptap/",
        "prosemirror-"
      ]
    },
    {
      "groupName": "highlight",
      "matchPackageNames": [
        "highlight.js",
        "lowlight"
      ]
    },
    {
      "groupName": "jest",
      "matchPackageNames": [
        "jest",
        "@vue/vue2-jest"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "matchBaseBranches": ["stable25", "stable24", "stable23"],
      "enabled": false
    },
    {
      "matchPackageNames": ["vue"],
      "allowedVersions": "<3"
    },
    {
      "matchPackageNames": ["vuex"],
      "allowedVersions": "<4"
    }
  ]
}
