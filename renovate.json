{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "ignoreUnstable": false,
  "baseBranches": [
    "master",
    "stable25",
    "stable24",
    "stable23"
  ],
  "enabledManagers": [
    "npm"
  ],
  "ignoreDeps": [
    "node",
    "npm"
  ],
  "packageRules": [
    {
      "groupName": "tiptap",
      "matchPackagePrefixes": [
        "@tiptap/",
        "prosemirror-"
      ]
    },
    {
      "groupName": "highlight",
      "matchPackageNames": [
        "highlight.js",
        "lowlight"
      ]
    },
    {
      "groupName": "jest",
      "matchPackageNames": [
        "jest",
        "@vue/vue2-jest",
        "jest-environment-jsdom"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "matchBaseBranches": ["stable25", "stable24", "stable23"],
      "enabled": false
    }
  ]
}
